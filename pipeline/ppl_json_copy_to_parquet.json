{
	"name": "ppl_json_copy_to_parquet",
	"properties": {
		"activities": [
			{
				"name": "json_adf_to_parquet",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"wildcardFolderPath": "staging_unzipped_data/Azure-Data-Factory-datasets.zip/Azure-Data-Factory-by-Example-Second-Edition-main/SampleData/HandyCandy",
							"wildcardFileName": "*.json",
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "JsonReadSettings"
						}
					},
					"sink": {
						"type": "ParquetSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings",
							"copyBehavior": "MergeFiles"
						},
						"formatSettings": {
							"type": "ParquetWriteSettings"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['TransactionId']"
								},
								"sink": {
									"name": "TransactionId",
									"type": "Guid"
								}
							},
							{
								"source": {
									"path": "$['TransactionDate']"
								},
								"sink": {
									"name": "TransactionDate",
									"type": "DateTime"
								}
							},
							{
								"source": {
									"path": "$['StoreId']"
								},
								"sink": {
									"name": "StoreId",
									"type": "Int16"
								}
							},
							{
								"source": {
									"path": "['Product']"
								},
								"sink": {
									"name": "Product",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "['Price']"
								},
								"sink": {
									"name": "Price",
									"type": "Double"
								}
							}
						],
						"collectionReference": "$['Items']"
					}
				},
				"inputs": [
					{
						"referenceName": "ds_json_to_parquet",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "ds_Parquet",
						"type": "DatasetReference"
					}
				]
			}
		],
		"folder": {
			"name": "Previous_ppl"
		},
		"annotations": [],
		"lastPublishTime": "2025-07-02T22:48:50Z"
	},
	"type": "Microsoft.DataFactory/factories/pipelines"
}